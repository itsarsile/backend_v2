generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String        @id @default(uuid())
  name     String        @db.VarChar(255)
  email    String        @unique
  photo    String?       @default("default.png")
  verified Boolean?      @default(false)
  address  Address[]
  password String
  role     RoleEnumType? @default(customer)

  verificationCode String? @unique @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Order     Order?   @relation(fields: [orderId], references: [id])
  orderId   String?

  @@unique([email, verificationCode])
  @@index([email, verificationCode])
  @@map(name: "users")
}

model Product {
  id          String     @id @default(uuid())
  name        String
  description String?
  image       String?
  rating      Float      @default(0.0)
  price       Int
  stock       Int
  category    Category[]
  Order       Order?     @relation(fields: [orderId], references: [id])
  orderId     String?

  @@map(name: "products")
}

model Order {
  id        String      @id @default(uuid())
  products  Product[]
  users     User[]
  address   Address[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  status    OrderStatus

  @@map(name: "orders")
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String
  image    String
  products Product[]
}

model Address {
  id         String  @id @default(uuid())
  street     String
  city       String
  state      String
  postalCode String
  country    String
  User       User?   @relation(fields: [userId], references: [id])
  userId     String?
  Order      Order?  @relation(fields: [orderId], references: [id])
  orderId    String?

  @@map(name: "addresses")
}

enum RoleEnumType {
  customer
  seller
  admin
}

enum OrderStatus {
  pending
  processing
  shipped
  delivered
  canceled
}
